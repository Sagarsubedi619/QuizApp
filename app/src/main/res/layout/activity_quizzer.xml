<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quizzer"
    android:orientation="vertical"
    android:background="@drawable/unnamed">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/untis"
        android:background="@color/fontcolor1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/ready"
            android:textSize="@dimen/paita"
            android:textColor="@color/basicwhite"
            android:layout_gravity="center"
            android:fontFamily="@font/advent_pro_thin"/>

    </FrameLayout>

    <Button

        android:id="@+id/start_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/saya"
        android:layout_marginLeft="@dimen/saya"
        android:layout_marginTop="@dimen/saya"
        android:layout_marginRight="@dimen/saya"
        android:layout_marginBottom="@dimen/chalis"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/advent_pro_thin"
        android:gravity="center"
        android:text="@string/y_e_s"
        android:textSize="@dimen/fauhyre"
        android:textStyle="bold" />

</LinearLayout>